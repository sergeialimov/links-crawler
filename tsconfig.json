{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": ["node", "jest"],
  },
  "include": [
    "app.ts",
    "src/**/*",
    "tests/**/*.ts",
    "jest.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}