{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [
        ".eslintrc.{js,cjs}",
        "**/*.ts",
        "*.test.ts",
        "!jest.config.ts"
      ],
      "excludedFiles": "*.test.ts",
      "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
      }
    }
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-await-in-loop": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "ignorePatterns": [
    "dist/workers/crawlManager.js",
    "dist/workers/crawlTask.js"
  ]
}